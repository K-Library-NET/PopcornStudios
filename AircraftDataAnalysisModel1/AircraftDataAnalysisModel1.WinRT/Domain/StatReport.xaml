    xmlns:common="using:AircraftDataAnalysisWinRT.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:ctrl="using:AircraftDataAnalysisModel1.WinRT.MyControl"

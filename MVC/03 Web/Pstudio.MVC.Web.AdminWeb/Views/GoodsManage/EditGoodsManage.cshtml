
@{
    ViewBag.Title = "EditGoodsManage";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="btn-toolbar" style="text-align:center">
            <a href="@Url.Action("GoodsManageList", "GoodsManage")" style="margin-right:50px;" class="btn blue" data-ajax-update="#mainContent" data-ajax-mode="replace" data-ajax-method="get" data-ajax="true">
                <i class="icon-save"></i>保存
            </a>
            <a href="@Url.Action("GoodsManageList", "GoodsManage")" class="btn" data-ajax-update="#mainContent" data-ajax-mode="replace" data-ajax-method="get" data-ajax="true">
                删除
            </a>
            <div class="btn-group">
            </div>
        </div>
        <div class="well">
            <div class="tab-content" id="myTabContent">
                <form id="tab">
                    <label>
                        商品号
                    </label>
                    <input class="input-xlarge" type="text" value="123456" />
                    <label>
                        商品名称
                    </label>
                    <input class="input-xlarge" type="text" value="你猜这是什么" />
                    <label>
                        商品价格
                    </label>
                    <input class="input-xlarge" type="text" value="169">
                    <label>
                        商品重量
                    </label>
                    <input class="input-xlarge" type="text" value="18">
                    <label>
                        原产地
                    </label>
                    <textarea class="input-xlarge" rows="3">恭喜你猜错了！</textarea>
                </form>
            </div>
        </div>
        <div tabindex="-1" class="modal small hide fade" id="myModal" role="dialog" aria-hidden="true" aria-labelledby="myModalLabel">
            <div class="modal-header">
                <button class="close" aria-hidden="true" type="button" data-dismiss="modal">
                    ×
                </button>
                <h3 id="myModalLabel">
                    删除确认
                </h3>
            </div>
            <div class="modal-body">
                <p class="error-text">
                    <i class="icon-warning-sign modal-icon"></i>你确认要删除这个用户吗?
                </p>
            </div>
            <div class="modal-footer">
                <button class="btn" aria-hidden="true" data-dismiss="modal">
                    取消
                </button>
                <button class="btn btn-danger" data-dismiss="modal">
                    删除
                </button>
            </div>
        </div>
        <footer>
            <hr>
        </footer>

    </div>
</div>

